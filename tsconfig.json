{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es6"
        ],
        "allowJs": true,
        "rootDir": "./",
        "outDir": "build",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@controllers/*": [
                "./src/app/controllers/*"
            ],
            "@models/*": [
                "./src/app/models/*"
            ],
            "@routes/*": [
                "./src/app/routes/*"
            ],
            "@utils/*": [
                "./src/app/utils/*"
            ]
        }
    },
    "exclude": ["node_modules", "build"]
}